{
  "dataset_reader": {
    "class_name": "multiwoz_reader",
    "data_path": "{DOWNLOADS_PATH}/multiwoz"
  },
  "dataset_iterator": {
    "class_name": "skill_dialog_iterator",
    "y_names": ["text", "domains"],
    "shuffle": false
  },
  "chainer": {
    "in": ["x_text", "history_list", "state", "db_pointer"],
    "in_y": ["y_text", "y_domains"],
    "out": ["prediction_text", "confidence", "state"],
    "pipe": [
      {
        "id": "lazy_spacy_tokenizer",
        "class_name": "lazy_tokenizer",
        "in": ["x_text"],
        "out": ["x_tokens"]
      },
      {
        "ref": "lazy_spacy_tokenizer",
        "in": ["y_text"],
        "out": ["y_tokens"]
      },
      {
        "class_name": "deeppavlov.models.seq2seq_go_bot.wrapper:PerItemWrapper",
        "component": "#lazy_spacy_tokenizer",
        "in": ["history_list"],
        "out": ["history_tok_list"]
      },
      {
        "id": "src_token_vocab",
        "fit_on": ["x_tokens", "y_tokens"],
        "class_name": "simple_vocab",
        "unk_token": "<UNK>",
        "special_tokens": ["<UNK>", "<SOS>"],
        "save_path": "{BOT_PATH}/src_tokens.dict",
        "load_path": "{BOT_PATH}/src_tokens.dict"
      },
      {
        "id": "tgt_token_vocab",
        "fit_on": ["y_tokens"],
        "class_name": "simple_vocab",
        "unk_token": "<UNK>",
        "special_tokens": ["<UNK>", "<SOS>", "<EOS>"],
        "save_path": "{BOT_PATH}/tgt_tokens.dict",
        "load_path": "{BOT_PATH}/tgt_tokens.dict"
      },
      {
        "id": "token_embedder",
        "class_name": "glove",
        "load_path": "{DOWNLOADS_PATH}/embeddings/glove.6B.100d.txt"
      },
      {
        "id": "state_featurizer",
        "class_name": "deeppavlov.models.seq2seq_go_bot.features:StateFeaturizer",
        "save_path": "{BOT_PATH}/state_features.json",
        "load_path": "{BOT_PATH}/state_features.json",
        "dontcare_value": "dont care",
        "fit_on": ["state"],
        "in": ["state"],
        "out": ["state_feats"]
      },
      {
        "in": ["x_tokens", "history_tok_list", "state_feats", "db_pointer"],
        "in_y": ["y_tokens"],
        "out": ["prediction_tokens", "confidence"],
        "main": true,
        "class_name": "seq2seq_go_bot",
        "load_path": "{BOT_PATH}/model",
        "save_path": "{BOT_PATH}/model",
        "delimiters": ["<USR>", "<SYS>"],
        "start_of_sequence_token": "<SOS>",
        "end_of_sequence_token": "<EOS>",
        "embedder": "#token_embedder",
        "network_parameters": {
          "l2_regs": [0.0, 0.0],
          "cell_type": "gru",
          "intent_feature_size": "#state_featurizer.len",
          "db_feature_size": 100500,
          "encoder_agg_method": "concat",
          "encoder_use_cudnn": true,
          "learning_rate": 3e-4,
          "learning_rate_drop_patience": 3,
          "learning_rate_drop_div": 2.0,
          "dropout_rate": 0.5,
          "state_dropout_rate": 0.03,
          "beam_width": 1,
          "target_start_of_sequence_index": "#tgt_token_vocab.__getitem__('<SOS>')",
          "target_end_of_sequence_index": "#tgt_token_vocab.__getitem__('<EOS>')",
          "target_vocab_size": "#tgt_token_vocab.len",
          "hidden_size": 256
        },
        "debug": true,
        "debug": false,
        "target_vocab": "#tgt_token_vocab"
      },
      {
        "class_name": "detokenizer",
        "smart": false,
        "in": ["prediction_tokens"],
        "out": ["prediction_text"]
      }
    ]
  },
  "train": {
    "epochs": 200,
    "batch_size": 64,

    "metrics": [
      {
        "name": "google_bleu",
        "inputs": ["y_text", "prediction_text"]
      },
      {
        "name": "accuracy",
        "inputs": ["y_text", "prediction_text"]
      }
    ],
    "validation_patience": 60,
    "val_every_n_epochs": -1,
    "val_every_n_batches": 500,
    "tensorboard_log_dir": "{BOT_PATH}/logs",

    "log_every_n_epochs": -1,
    "log_every_n_batches": 500,
    "validate_best": true,
    "show_examples": false
  },
  "metadata": {
    "variables": {
      "ROOT_PATH": "~/.deeppavlov",
      "DOWNLOADS_PATH": "{ROOT_PATH}/downloads",
      "MODELS_PATH": "{ROOT_PATH}/models",
      "BOT_PATH": "{MODELS_PATH}/bot_multiwoz_simple_gru_bs_db"
    },
    "requirements": [
      "{DEEPPAVLOV_PATH}/requirements/tf.txt",
      "{DEEPPAVLOV_PATH}/requirements/gensim.txt"
    ],
    "labels": {
      "telegram_utils": "Seq2SeqGoalOrientedBot",
      "server_utils": "GoalOrientedBot"
    },
    "download": [
      {
        "url": "http://files.deeppavlov.ai/embeddings/glove.6B.100d.txt",
        "subdir": "{DOWNLOADS_PATH}/embeddings"
      }
    ]
  }
}
